<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>giatk.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>giatk.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetItemController</servlet-name>
        <servlet-class>giatk.controllers.GetItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDetailItemController</servlet-name>
        <servlet-class>giatk.controllers.GetDetailItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>giatk.controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateItemController</servlet-name>
        <servlet-class>giatk.controllers.UpdateItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateImageController</servlet-name>
        <servlet-class>giatk.controllers.UpdateImageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertItemController</servlet-name>
        <servlet-class>giatk.controllers.InsertItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>giatk.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>giatk.controllers.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowItemInCartController</servlet-name>
        <servlet-class>giatk.controllers.ShowItemInCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PutItemInCart</servlet-name>
        <servlet-class>giatk.controllers.PutItemInCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemInCart</servlet-name>
        <servlet-class>giatk.controllers.RemoveItemInCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchItemController</servlet-name>
        <servlet-class>giatk.controllers.SearchItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetItemController</servlet-name>
        <url-pattern>/GetItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDetailItemController</servlet-name>
        <url-pattern>/GetDetailItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateItemController</servlet-name>
        <url-pattern>/UpdateItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateImageController</servlet-name>
        <url-pattern>/UpdateImageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertItemController</servlet-name>
        <url-pattern>/InsertItemController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/SignUpController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowItemInCartController</servlet-name>
        <url-pattern>/ShowItemInCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PutItemInCart</servlet-name>
        <url-pattern>/PutItemInCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemInCart</servlet-name>
        <url-pattern>/RemoveItemInCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchItemController</servlet-name>
        <url-pattern>/SearchItemController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>GetItemController</welcome-file>
    </welcome-file-list>
</web-app>
